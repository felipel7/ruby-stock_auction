<div class="absolute h-[calc(100vh-100px)] left-0 right-0 py-6 flex flex-col justify-center sm:py-12">
  <div class="relative py-3 sm:max-w-xl sm:mx-auto">
    <div
      class="absolute inset-0 bg-gradient-to-r from-purple-400 to-purple-700 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
    </div>

    <section class="relative px-4 py-10 bg-white dark:bg-dark-900 shadow-lg sm:rounded-3xl sm:p-20">
      <h2 class="mb-3 text-2xl font-semibold text-gray-900 dark:text-white">Login</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <p class="mb-4">
          <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-purple-500 dark:focus:border-purple-500' %>
        </p>

        <p class="mb-3">
          <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'w-full bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-purple-500 dark:focus:border-purple-500' %>
        </p>

        <% if devise_mapping.rememberable? %>
          <p>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "ml-1 align-middle text-sm font-medium text-gray-900 dark:text-white" %>
          </p>
        <% end %>

        <div class="mt-3 mb-4">
          <%= button_tag 'Entrar', class: "!w-full justify-center flex gap-2 items-center !font-semibold text-md cursor-pointer text-white tracking-wide bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:outline-none focus:ring-purple-300 rounded-lg sm:w-auto px-5 py-2.5 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-800" do %>
            <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12H4m12 0-4 4m4-4-4-4m3-4h2a3 3 0 0 1 3 3v10a3 3 0 0 1-3 3h-2"/>
            </svg>
            Entrar
          <% end %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </section>
  </div>
</div>
