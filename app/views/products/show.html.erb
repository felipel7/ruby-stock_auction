<section class="section product-model--show">
  <h2>Produto - <%= @product.name %></h2>

  <%= render partial: "shared/image", locals: { obj: @product } %>

  <dl class="description__list">
    <div>
      <dt><%= Product.human_attribute_name(:description) %>:</dt>
      <dd><%= @product.description %></dd>
    </div>

    <div>
      <dt><%= Product.human_attribute_name(:code) %>:</dt>
      <dd><%= @product.sku %></dd>
    </div>

    <div>
      <dt><%= Product.human_attribute_name(:dimensions) %>:</dt>
      <dd><%= @product.full_dimensions_desc %></dd>
    </div>

    <div>
      <dt><%= Product.human_attribute_name(:weight) %>:</dt>
      <dd><%= @product.weight %>g</dd>
    </div>

    <div>
      <dt><%= Product.human_attribute_name(:category) %>:</dt>
      <dd><%= @product.category.name %></dd>
    </div>
  </dl>
  <% if @product.lot_id.present? %>
    <p>
      Compre o produto clicando no seguinte lote:  
      <%= link_to @product.lot.batch_code, lot_path(@product.lot_id) %>
    </p>
  <% end %>
</section>
