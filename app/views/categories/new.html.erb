<section class="section section__categories--index">
  <h2>Criar nova categoria</h2>

  <%= render 'shared/errors', { obj: @category } %>

  <%= form_with(model: @category, class: "form") do |form| %>
    <p>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </p>

    <%= form.submit "Criar nova Categoria", class: "btn btn-primary" %>
  <% end %>
</section>
