<section class="section admin products--index">
  <%= link_to "Cadastrar Novo Produto", new_admin_product_path, class:"btn btn-primary rounded" %>
  <h2>Lista de Produtos Cadastrados:</h2>

  <div class="table__container">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th><%= Product.human_attribute_name(:sku) %></th>
          <th><%= Product.human_attribute_name(:name) %></th>
          <th><%= Product.human_attribute_name(:status) %></th>
          <th><%= Product.human_attribute_name(:lot) %></th>
          <th><%= Product.human_attribute_name(:category) %></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= link_to product.sku, admin_product_path(product) %></td>
            <td><%= product.name %></td>
            <td><%= product.lot&.batch_code ? "Não Disponível" : "Disponível" %></td>
            <td><%= product.lot&.batch_code || "-" %></td>
            <td><%= product.category.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
