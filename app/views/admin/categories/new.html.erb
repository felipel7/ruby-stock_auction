<section class="section admin categories--index">
  <h2>Criar nova categoria</h2>

  <%= render 'shared/errors', { obj: @category } %>

  <%= form_with(model: @category, url: admin_categories_path, class: "form") do |form| %>
    <p>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </p>

    <%= form.submit "Criar nova Categoria", class: "btn btn-primary rounded" %>
  <% end %>
</section>
